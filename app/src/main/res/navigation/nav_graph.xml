<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.magicbluepenguin.foursquareapp.venuesearch.list.VenueSearchFragment"
        android:label="@string/venue_search_list_fragment_label"
        tools:layout="@layout/fragment_venue_search">
        <action
            android:id="@+id/show_detail"
            app:destination="@id/SecondFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.magicbluepenguin.foursquareapp.venuesearch.detail.VenueDetailFragment"
        android:label="@string/venue_detail_fragment_label"
        tools:layout="@layout/fragment_venue_detail">
        <argument
            android:name="venueId"
            app:argType="string" />
    </fragment>
</navigation>